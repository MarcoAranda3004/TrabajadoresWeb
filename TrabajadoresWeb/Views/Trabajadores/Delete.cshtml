@model TrabajadoresWeb.Models.Trabajador

@{
    ViewData["Title"] = "Eliminar Trabajador";
}

<div class="text-center mb-4">
    <h4 class="text-danger">¿Estás seguro que deseas eliminar este trabajador?</h4>
</div>

<div class="card mx-auto shadow p-4" style="max-width: 550px;">
    <div class="card-body">
        <div class="mb-3 row">
            <label class="col-sm-4 fw-bold">Tipo Documento</label>
            <div class="col-sm-8">
                @Model.TipoDocumento
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-4 fw-bold">Número Documento</label>
            <div class="col-sm-8">
                @Model.NumeroDocumento
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-4 fw-bold">Nombres</label>
            <div class="col-sm-8">
                @Model.Nombres
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-4 fw-bold">Sexo</label>
            <div class="col-sm-8">
                @Model.Sexo
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-4 fw-bold">Departamento</label>
            <div class="col-sm-8">
                @Model.Departamento?.NombreDepartamento
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-4 fw-bold">Provincia</label>
            <div class="col-sm-8">
                @Model.Provincia?.NombreProvincia
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-4 fw-bold">Distrito</label>
            <div class="col-sm-8">
                @Model.Distrito?.NombreDistrito
            </div>
        </div>

        <form asp-action="Delete" class="mt-4 text-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger px-4">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>
